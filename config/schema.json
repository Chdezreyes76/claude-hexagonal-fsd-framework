{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Claude Hexagonal+FSD Framework Configuration",
  "type": "object",
  "required": ["project", "team"],
  "additionalProperties": true,
  "properties": {
    "version": {
      "type": "string"
    },
    "frameworkVersion": {
      "type": "string"
    },
    "lastUpdated": {
      "type": "string",
      "format": "date-time"
    },
    "project": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "nameSnake": { "type": "string" },
        "nameKebab": { "type": "string" },
        "description": { "type": "string" },
        "version": { "type": "string" }
      }
    },
    "team": {
      "type": "object",
      "required": ["owner"],
      "properties": {
        "owner": {
          "type": "object",
          "required": ["email"],
          "properties": {
            "name": { "type": "string" },
            "email": { "type": "string", "format": "email" }
          }
        },
        "github": {
          "type": "object",
          "properties": {
            "owner": { "type": "string" },
            "repo": { "type": "string" },
            "mainBranch": { "type": "string" }
          }
        }
      }
    },
    "stack": {
      "type": "object",
      "properties": {
        "backend": {
          "type": "object",
          "properties": {
            "language": { "type": "string" },
            "version": { "type": "string" },
            "framework": { "type": "string" },
            "architecture": { "type": "string" },
            "dirName": { "type": "string" },
            "port": { "type": "integer", "minimum": 1, "maximum": 65535 }
          }
        },
        "frontend": {
          "type": "object",
          "properties": {
            "language": { "type": "string" },
            "framework": { "type": "string" },
            "version": { "type": "string" },
            "architecture": { "type": "string" },
            "dirName": { "type": "string" },
            "port": { "type": "integer", "minimum": 1, "maximum": 65535 }
          }
        },
        "database": {
          "type": "object",
          "properties": {
            "type": { "type": "string" },
            "version": { "type": "string" },
            "name": { "type": "string" },
            "port": { "type": "integer", "minimum": 1, "maximum": 65535 },
            "migrations": { "type": "string" }
          }
        }
      }
    },
    "domains": {
      "type": "object",
      "properties": {
        "examples": {
          "type": "array",
          "items": { "type": "string" }
        },
        "namingConvention": {
          "type": "object"
        }
      }
    },
    "paths": {
      "type": "object"
    },
    "qa": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "emailReports": { "type": "boolean" },
        "emailConfig": { "type": "object" },
        "localReportPath": { "type": "string" }
      }
    },
    "workflows": {
      "type": "object",
      "properties": {
        "autoImplement": { "type": "boolean" },
        "autoReview": { "type": "boolean" },
        "autoMerge": { "type": "boolean" },
        "requireTests": { "type": "boolean" }
      }
    },
    "customization": {
      "type": "object"
    }
  }
}
