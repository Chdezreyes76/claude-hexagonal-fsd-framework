import { useQuery, useMutation, useQueryClient } from '@tanstack/react-query';
import { {{domain}}Service } from '@/services/{{domain}}.service';
import type {
  {{Domain}}Filters,
  Crear{{Domain}}Request,
  Actualizar{{Domain}}Request
} from '@/entities/{{domain}}/model/types';
import { toast } from 'sonner';

// Query keys
export const {{domain}}Keys = {
  all: ['{{domains}}'] as const,
  lists: () => [...{{domain}}Keys.all, 'list'] as const,
  list: (filters?: {{Domain}}Filters) => [...{{domain}}Keys.lists(), filters] as const,
  details: () => [...{{domain}}Keys.all, 'detail'] as const,
  detail: (id: number) => [...{{domain}}Keys.details(), id] as const,
};

// Queries
export const use{{Domain}}s = (filters?: {{Domain}}Filters) => {
  return useQuery({
    queryKey: {{domain}}Keys.list(filters),
    queryFn: () => {{domain}}Service.getAll(filters),
  });
};

export const use{{Domain}} = (id: number) => {
  return useQuery({
    queryKey: {{domain}}Keys.detail(id),
    queryFn: () => {{domain}}Service.getById(id),
    enabled: !!id,
  });
};

// Mutations
export const useCrear{{Domain}} = () => {
  const queryClient = useQueryClient();

  return useMutation({
    mutationFn: (data: Crear{{Domain}}Request) => {{domain}}Service.create(data),
    onSuccess: () => {
      queryClient.invalidateQueries({ queryKey: {{domain}}Keys.lists() });
      toast.success('{{Domain}} creado correctamente');
    },
    onError: (error: Error) => {
      toast.error(`Error al crear: ${error.message}`);
    },
  });
};

export const useActualizar{{Domain}} = () => {
  const queryClient = useQueryClient();

  return useMutation({
    mutationFn: ({ id, data }: { id: number; data: Actualizar{{Domain}}Request }) =>
      {{domain}}Service.update(id, data),
    onSuccess: (_, { id }) => {
      queryClient.invalidateQueries({ queryKey: {{domain}}Keys.lists() });
      queryClient.invalidateQueries({ queryKey: {{domain}}Keys.detail(id) });
      toast.success('{{Domain}} actualizado correctamente');
    },
    onError: (error: Error) => {
      toast.error(`Error al actualizar: ${error.message}`);
    },
  });
};

export const useEliminar{{Domain}} = () => {
  const queryClient = useQueryClient();

  return useMutation({
    mutationFn: (id: number) => {{domain}}Service.delete(id),
    onSuccess: () => {
      queryClient.invalidateQueries({ queryKey: {{domain}}Keys.lists() });
      toast.success('{{Domain}} eliminado correctamente');
    },
    onError: (error: Error) => {
      toast.error(`Error al eliminar: ${error.message}`);
    },
  });
};
