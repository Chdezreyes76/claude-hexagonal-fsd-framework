#root {
  max-width: 1280px;
  margin: 0 auto;
  padding: 2rem;
  text-align: center;
}

.card {
  padding: 2em;
}

.read-the-docs {
  color: #888;
}

.info {
  margin-top: 3rem;
  padding: 1rem;
  background: #f5f5f5;
  border-radius: 8px;
}

.info h3 {
  margin-top: 0;
}

.info a {
  color: #646cff;
  text-decoration: none;
}

.info a:hover {
  text-decoration: underline;
}
