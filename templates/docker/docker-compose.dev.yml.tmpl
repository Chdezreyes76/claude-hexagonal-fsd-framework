# Docker Compose for {{projectName}} Development Environment
# Generated by Claude Hexagonal+FSD Framework

version: '3.8'

services:
{{#if_not_sqlite}}
  # Database Service
  database:
{{#if_mysql}}
    image: mysql:{{stack.database.version}}
    container_name: {{projectNameKebab}}-db-dev
    restart: unless-stopped
    environment:
      MYSQL_ROOT_PASSWORD: ${DB_ROOT_PASSWORD:-root}
      MYSQL_DATABASE: {{stack.database.name}}
      MYSQL_USER: {{stack.database.user}}
      MYSQL_PASSWORD: ${DB_PASSWORD:-changeme}
    ports:
      - "{{stack.database.port}}:3306"
    volumes:
      - db-data:/var/lib/mysql
    networks:
      - {{projectNameKebab}}-network
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost", "-u{{stack.database.user}}", "-p${DB_PASSWORD:-changeme}"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 30s
{{/if_mysql}}
{{#if_postgresql}}
    image: postgres:{{stack.database.version}}
    container_name: {{projectNameKebab}}-db-dev
    restart: unless-stopped
    environment:
      POSTGRES_DB: {{stack.database.name}}
      POSTGRES_USER: {{stack.database.user}}
      POSTGRES_PASSWORD: ${DB_PASSWORD:-changeme}
    ports:
      - "{{stack.database.port}}:5432"
    volumes:
      - db-data:/var/lib/postgresql/data
    networks:
      - {{projectNameKebab}}-network
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U {{stack.database.user}}"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 30s
{{/if_postgresql}}
{{#if_sqlserver}}
    image: mcr.microsoft.com/mssql/server:2019-latest
    container_name: {{projectNameKebab}}-db-dev
    restart: unless-stopped
    environment:
      ACCEPT_EULA: Y
      SA_PASSWORD: ${DB_PASSWORD:-YourStrong@Passw0rd}
      MSSQL_PID: Developer
    ports:
      - "{{stack.database.port}}:1433"
    volumes:
      - db-data:/var/opt/mssql
    networks:
      - {{projectNameKebab}}-network
    healthcheck:
      test: ["CMD-SHELL", "/opt/mssql-tools/bin/sqlcmd -S localhost -U sa -P ${DB_PASSWORD:-YourStrong@Passw0rd} -Q 'SELECT 1'"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 30s
{{/if_sqlserver}}
{{/if_not_sqlite}}

  # Backend Service
  backend:
    build:
      context: ./{{stack.backend.dirName}}
      dockerfile: Dockerfile.dev
    container_name: {{projectNameKebab}}-backend-dev
    restart: unless-stopped
    ports:
      - "{{stack.backend.port}}:{{stack.backend.port}}"
    environment:
      # Application
      - DEBUG=True
      - ENVIRONMENT=development
      # Database
{{#if_sqlite}}
      - DB_TYPE=sqlite
      - DB_SQLITE_PATH=/app/{{stack.database.name}}.db
{{/if_sqlite}}
{{#if_not_sqlite}}
      - DB_TYPE={{stack.database.type}}
      - DB_HOST=database
{{#if_mysql}}
      - DB_PORT=3306
{{/if_mysql}}
{{#if_postgresql}}
      - DB_PORT=5432
{{/if_postgresql}}
{{#if_sqlserver}}
      - DB_PORT=1433
{{/if_sqlserver}}
      - DB_USER={{stack.database.user}}
      - DB_PASSWORD=${DB_PASSWORD:-changeme}
      - DB_NAME={{stack.database.name}}
{{/if_not_sqlite}}
      # Logging
      - LOG_LEVEL=DEBUG
      - LOG_FORMAT=console
      # API
      - API_V1_PREFIX=/api/v1
    volumes:
      # Code volume (hot reload)
      - ./{{stack.backend.dirName}}:/app
      # Dependencies volume (avoid permission issues)
      - backend-venv:/app/venv
      - backend-pycache:/app/__pycache__
{{#if_sqlite}}
      # SQLite database file
      - db-data:/app/data
{{/if_sqlite}}
    networks:
      - {{projectNameKebab}}-network
{{#if_not_sqlite}}
    depends_on:
      database:
        condition: service_healthy
{{/if_not_sqlite}}

  # Frontend Service
  frontend:
    build:
      context: ./{{stack.frontend.dirName}}
      dockerfile: Dockerfile.dev
    container_name: {{projectNameKebab}}-frontend-dev
    restart: unless-stopped
    ports:
      - "{{stack.frontend.port}}:{{stack.frontend.port}}"
    environment:
      - VITE_API_URL=http://localhost:{{stack.backend.port}}
      - VITE_API_BASE_URL=http://localhost:{{stack.backend.port}}/api/v1
    volumes:
      # Code volume (hot reload with HMR)
      - ./{{stack.frontend.dirName}}:/app
      # Dependencies volume (avoid permission issues and improve performance)
      - frontend-node-modules:/app/node_modules
    networks:
      - {{projectNameKebab}}-network
    depends_on:
      - backend
    stdin_open: true
    tty: true

# Networks
networks:
  {{projectNameKebab}}-network:
    name: {{projectNameKebab}}-network
    driver: bridge

# Volumes
volumes:
  db-data:
    name: {{projectNameKebab}}-db-data
  backend-venv:
    name: {{projectNameKebab}}-backend-venv
  backend-pycache:
    name: {{projectNameKebab}}-backend-pycache
  frontend-node-modules:
    name: {{projectNameKebab}}-frontend-node-modules
