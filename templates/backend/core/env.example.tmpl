# ============================================================================
# APPLICATION
# ============================================================================
APP_NAME={{projectName}}
APP_VERSION={{project.version}}
DEBUG=True
ENVIRONMENT=development

# ============================================================================
# DATABASE - {{stack.database.type}}
# ============================================================================
DB_TYPE={{stack.database.type}}
{{#if_mysql}}
# MySQL Configuration
DB_HOST=localhost
DB_PORT={{stack.database.port}}
DB_USER={{stack.database.user}}
DB_PASSWORD=changeme
DB_NAME={{stack.database.name}}
{{/if_mysql}}
{{#if_postgresql}}
# PostgreSQL Configuration
DB_HOST=localhost
DB_PORT={{stack.database.port}}
DB_USER={{stack.database.user}}
DB_PASSWORD=changeme
DB_NAME={{stack.database.name}}
{{/if_postgresql}}
{{#if_sqlserver}}
# SQL Server Configuration
DB_HOST=localhost
DB_PORT={{stack.database.port}}
DB_USER={{stack.database.user}}
DB_PASSWORD=changeme
DB_NAME={{stack.database.name}}
{{/if_sqlserver}}
{{#if_sqlite}}
# SQLite Configuration
DB_SQLITE_PATH=./{{stack.database.name}}.db
{{/if_sqlite}}

# Connection Pool Settings (no aplica para SQLite)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_ECHO=False

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=console
# LOG_FILE=logs/{{projectNameKebab}}.log
LOG_FILE_MAX_BYTES=10485760
LOG_FILE_BACKUP_COUNT=5

# ============================================================================
# SECURITY
# ============================================================================
SECRET_KEY=changeme-in-production-use-strong-random-key
ALLOWED_HOSTS=*
CORS_ORIGINS=http://localhost:3000,http://localhost:{{stack.frontend.port}}

# ============================================================================
# API
# ============================================================================
API_V1_PREFIX=/api/v1
API_TITLE={{projectName}} API
API_DESCRIPTION={{project.description}}
